@model SampleProjectPostTitle.Models.Posts

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3 mt-3">
                <div class="my-3">
                    <a href="detail?id=@Model.ID" class=" text-decoration-none text-dark">
                        <i class="fa-solid fa-arrow-left mx-1"></i>Back
                    </a>
                </div>
                <form action="edit" method="post" enctype="multipart/form-data">
                    <h5>Post Update</h5>

                    <input type="hidden" name="id" value="@Model.ID" />

                    <div class="input-text">
                        <label class="form-label">Title</label>
                        <input type="text" name="title" class="form-control mb-3" value="@Model.Title" placeholder="Enter Post Title..." required />
                    </div>

                    <div class="input-text">
                        <label class="form-label">Description</label>
                        <textarea name="description" class="form-control" cols="30" rows="10" placeholder="Enter Post Description...">@Model.Description</textarea>
                    </div>

                    <div class="input-text">
                        <label class="mt-4">Image</label>
                        <img src="~/Image/@Model.Image" class="img-thumbnail shadow-sm mt-1" />
                        <input type="file" name="image" class="form-control mb-3" />
                    </div>

                    <div class="input-text">
                        <label class="form-label">Location</label>
                        <input type="text" name="location" class="form-control mb-3" value="@Model.Location" placeholder="Enter Location..." required />
                    </div>

                    <div class="input-text">
                        <label class="form-label">Price</label>
                        <input type="number" name="price" class="form-control mb-3" value="@Model.Price" placeholder="Enter Price..." required />
                    </div>

                    <div class="input-text">
                        <label class="form-label">Rate</label>
                        <input type="number" name="rate" class="form-control mb-3" value="@Model.Rate" placeholder="Enter Rate..." required />
                    </div>

                    <input type="submit" class="btn btn-danger" value="Update" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>
